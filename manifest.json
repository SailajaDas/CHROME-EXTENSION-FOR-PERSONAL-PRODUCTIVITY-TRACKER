{
  "manifest_version": 3,
  "name": "Productivity Tracker",
  "version": "1.0.0",
  "description": "Track time spent on websites and manage daily goals.",
  "permissions": ["storage", "tabs", "alarms", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
